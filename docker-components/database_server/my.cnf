# Vulnerable MySQL Configuration
[mysql]
default-character-set = utf8mb4

[mysqld]
# Basic settings
bind-address = 0.0.0.0
port = 3306
datadir = /var/lib/mysql
socket = /var/run/mysqld/mysqld.sock

# Vulnerable: Allow remote root login
skip-name-resolve

# Vulnerable: Disable secure authentication
default_authentication_plugin = mysql_native_password

# Vulnerable: Weak SSL configuration
ssl-cert = /var/lib/mysql/server-cert.pem
ssl-key = /var/lib/mysql/server-key.pem
require_secure_transport = OFF

# Vulnerable: Permissive file operations
secure_file_priv = ""
local_infile = ON

# Vulnerable: Logging everything
general_log = ON
general_log_file = /var/log/mysql/general.log
log_error = /var/log/mysql/error.log

# Vulnerable: Query cache (deprecated but enabled)
query_cache_type = ON
query_cache_size = 1M

# Vulnerable: Large packet size
max_allowed_packet = 1G

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Vulnerable: No connection limits
max_connections = 1000
max_user_connections = 0

[mysqldump]
quick
quote-names
max_allowed_packet = 16M